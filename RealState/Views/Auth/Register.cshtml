@using RealState.ViewModels.AuthViewModels
@{
    Layout = null;
}

@model RegisterViewModel

<!doctype html>
<html lang="en">

@await Component.InvokeAsync("_HeadPartial")

<body data-pc-preset="preset-1" data-pc-sidebar-caption="true" data-pc-layout="vertical" data-pc-direction="ltr" data-pc-theme_contrast="" data-pc-theme="light">


    <div class="auth-main">
        <div class="auth-wrapper v2">
            <div class="auth-sidecontent">
                <img src="/images/dia.jpg" width="500px" height="400px" alt="images" class="img-fluid " />
            </div>
            <div class="auth-form">
                <div class="card my-5">
                    <div class="card-body">
                        <form method="post">
                           @*  <div class="text-center">
                                 <a href="#"><img src="/Able/dist/assets/images/logo-dark.svg" alt="img" /></a>
                                <div class="d-grid my-3">
                                    <button type="button" class="btn mt-2 btn-light-primary bg-light text-muted">
                                        <img src="/Able/dist/assets/images/authentication/facebook.svg" alt="img" /> <span> Facebook ile giriş yap</span>
                                    </button>
                                    <button type="button" class="btn mt-2 btn-light-primary bg-light text-muted">
                                        <img src="/Able/dist/assets/images/authentication/twitter.svg" alt="img" /> <span> Twitter ile giriş yap</span>
                                    </button>
                                    <button type="button" class="btn mt-2 btn-light-primary bg-light text-muted">
                                        <img src="/Able/dist/assets/images/authentication/google.svg" alt="img" /> <span> Google ile giriş yap</span>
                                    </button>
                                </div>
                            </div>
                            <div class="saprator my-3">
                                <span>VEYA</span>
                            </div> *@
                            <h4 class="text-center f-w-500 mb-3">Hemen üye olun</h4>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="mb-3">
                                        <input type="text" class="form-control" asp-for="FirstName" placeholder="Ad" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="mb-3">
                                        <input type="text" class="form-control" asp-for="LastName" placeholder="Soyad" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="mb-3">
                                        <input type="text" class="form-control" id="PhoneNumber" asp-for="PhoneNumber" placeholder="Telefon Numarası" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="mb-3">
                                        <input type="email" class="form-control" asp-for="Mail" placeholder="Mail Adresi" />
                                        <span asp-validation-for="Mail" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control" asp-for="Username"  placeholder="Kullanıcı Adı" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <input type="password" class="form-control" asp-for="Password"  placeholder="Şifre" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <input type="password" class="form-control" asp-for="ConfirmPassword"  placeholder="Şifre Tekrar" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="d-flex mt-1 justify-content-between">
                                <div class="form-check">
                                    <input class="form-check-input input-primary" asp-for="IsConfirmed" type="checkbox" id="customCheckc1" checked="" />
                                    <label  class="form-check-label text-muted" for="customCheckc1">Şartları kabul ediyorum.</label>
                                    <span asp-validation-for="IsConfirmed" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-primary">Üye Ol</button>
                            </div>
                            <div class="d-flex justify-content-between align-items-end mt-4">
                                <h6 class="f-w-500 mb-0">Zaten bir hesabın var mı?</h6>
                                <a href="/Auth/Login" class="link-primary">Giriş Yap</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/Able/dist/assets/js/plugins/imask.min.js"></script>

    <script type="text/javascript">
        // Mask için IMask kullanımı
        var phoneMask = IMask(
            document.getElementById('PhoneNumber'), {
            mask: '(000) 000-0000'
        });
    </script>

    @await Component.InvokeAsync("_FooterPartial")


    @await Component.InvokeAsync("_ScriptPartial")

</body>
<!-- [Body] end -->
</html>

